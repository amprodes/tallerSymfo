{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/form/assets/plugins/datatables-responsive/css/datatables.responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/form/assets/plugins/jquery-datatable/extensions/FixedColumns/css/dataTables.fixedColumns.min.css') }}">
{% endblock %}

{% block body %}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success" role="alert">
            <p class="pull-left">{{ flash_message }}</p>
            <button class="close" data-dismiss="alert"></button>
            <div class="clearfix"></div>
        </div>
    {% endfor %}
<div class="row">
    <div class="col-md-6">
    <h1>Products edit</h1>

    {{ form_start(edit_form, {'attr': {'class': 'p-t-15','role':'form','id':'form-register'}}) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group form-group-default">
                {{ form_label(edit_form.code) }}
                {{ form_widget(edit_form.code, {'attr': {'class': 'form-control','placeholder':'345346456'}}) }}
            </div>
            {{ form_errors(edit_form.code, {'attr': {'class': '','id':'fname-error','for':'fname'}}) }}
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-default">
                {{ form_label(edit_form.name) }}
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control','placeholder':'Jhon Doe'}}) }}
            </div>
            {{ form_errors(edit_form.name, {'attr': {'class': '','id':'fname-error','for':'fname'}}) }}
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="form-group form-group-default">
                {{ form_label(edit_form.description) }}
                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control','placeholder':'Your description goes here!'}}) }}
            </div>
            {{ form_errors(edit_form.description, {'attr': {'class': '','id':'fname-error','for':'fname'}}) }}
        </div>
        <div class="clearfix"></div>
        <div class="col-md-6">
            <div class="form-group form-group-default">
                {{ form_label(edit_form.brand) }}
                {{ form_widget(edit_form.brand, {'attr': {'class': 'form-control','placeholder':'Montain Dew, PS4, XBOX ONE'}}) }}
            </div>
            {{ form_errors(edit_form.brand, {'attr': {'class': '','id':'fname-error','for':'fname'}}) }}
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-default">
                {{ form_label(edit_form.category) }}
                {{ form_widget(edit_form.category, {'attr': {'class': 'form-control','placeholder':'Some Categories'}}) }}
            </div>
            {{ form_errors(edit_form.category, {'attr': {'class': '','id':'fname-error','for':'fname'}}) }}
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="form-group form-group-default">
                {{ form_label(edit_form.price) }}
                {{ form_widget(edit_form.price, {'attr': {'class': 'form-control','placeholder':'150.000'}}) }}
            </div>
            {{ form_errors(edit_form.price, {'attr': {'class': '','id':'fname-error','for':'fname'}}) }}
        </div>
    </div>
        <div class="pull-right"><input type="submit" value="Save" class="btn btn-primary btn-cons m-t-10"/></div>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}

        <div class="pull-right"><input type="submit" value="Delete" class="btn btn-default btn-cons m-t-10"></div>
    {{ form_end(delete_form) }}

    </div>
    <div class="col-md-6 p-t-50">
        <h3 class="p-t-50">Products makes it easy to enjoy what matters the most in your life</h3>
        <p>
            <small>
               This is the edit form from symfony, awesome!
            </small>
        </p>
        <div class="pull-right"><a href="{{ path('products_index') }}" class="btn btn-success btn-cons m-t-10">Back to the list</a></div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/form/assets/plugins/bootstrap-tag/bootstrap-tagsinput.min.js') }}"></script>
    <script src="{{ asset('bundles/form/assets/plugins/jquery-inputmask/jquery.inputmask.min.js') }}"></script>
    <script src="{{ asset('bundles/form/assets/js/form_elements.js') }}"></script>
    <script src="{{ asset('bundles/form/assets/plugins/jquery-autonumeric/autoNumeric.js') }}"></script>
{% endblock %}
